@model PersonResponse
@{
    ViewBag.title = "Delete Person";
    ViewBag.CurrentUrl = "~/Persons/Delete";

}

<div class="flex">
    <div class="flex-1">
        <div class="text-grey">
            <span>Contacts</span>
            <i class="fa-solid fa-caret-right"></i>
            <span class="text-grey">Persons</span>
            <i class="fa-solid fa-caret-right"></i>
            <span class="text-grey">Delete</span>
        </div>
    </div>
</div>







<div class="form-container">
    <a asp-controller="Persons" asp-action="Index" class="link-hover">Back To Persons List</a>
    <h2 class="text-large">Delete Person</h2>
    <form asp-controller="Persons" asp-action="Delete" method="post">
        @* person name *@
        @* <button>Submit</button> *@
        <input type="hidden" asp-for="Id" />
        <div class="form-field flex">
            <div class="center-box">
                <label asp-for="Name" class="form-label pt">Person Name</label>
            </div>
            <div class="flex-1">
                <input asp-for="Name" class="form-input" disabled="disabled"/>
                <span asp-validation-for="Name" class="text-red"></span>
            </div>
        </div>


        @* Email *@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Email" class="form-label pt">Email</label>
            </div>
            <div class="flex-1">
                <input asp-for="Email" class="form-input" disabled="disabled" />
                <span asp-validation-for="Email" class="text-red"></span>
            </div>
        </div>


       
        @* SubmitButton *@
        <div class="form-field flex">
            <div class="w-25">
            </div>
            <div class="flex-1">
                <button class="button button-green-back">Delete</button>
                <div asp-validation-summary="All"></div>
                @if (ViewBag.Errors != null)
                {

                    <div class="text-red ml">
                        <ul>
                            @foreach (var err in ViewBag.Errors)
                            {
                                <li>@err</li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>
    </form>
</div>
